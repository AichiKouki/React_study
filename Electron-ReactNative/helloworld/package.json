{
  "name": "helloworld",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-scripts": "2.1.3"
  },
  "scripts": {
    "//": "(ここはコメントのために作った) 以下の2行はElectronのビルドスクリプト",
    "electron-dev": "set ELECTRON_START_URL=http://localhost:3000 && electron public",
    "electron-build": "electron-packager build --platform=all --overwrite --asar",

    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",

    "//": "(ここはコメントのために作った) 以下の1行は、開発時に使用",
    "start": "concurrently \"npm run react-start\" \"npm run electron-dev\"",
    "//": "(ここはコメントのために作った) 以下の1行は、ビルド時に使用するもの",
    "build": "npm run react-build && npm run electron-build"

  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],

  "homepage":"./",  

  "devDependencies": {
    "concurrently": "^4.1.0",
    "electron": "^4.0.1",
    "electron-packager": "^13.0.1"
  }
}
